<?xml version="1.0" encoding="UTF-8"?>
<routeMap>
    <api>
        <name>/user</name>
        <method>post</method>
        <resource>UserResource</resource>
    </api>
    <api>
        <name>/user/:uid</name>
        <method>get</method>
        <method>delete</method>
        <resource>UserResource</resource>
    </api>
    <api>
        <name>/token/:param</name>
        <method>get</method>
        <resource>TokenResource</resource>
    </api>
</routeMap>